<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <title>Manchester United Matches</title>
</head>
<body>
<div class="container">

    <div class="container mt-3">

        <div class="row">
            <div class="column">
                <div class="alert alert-primary" role="alert">
                    To add all games to your calendar click <a href="https://calendar.manutd.com/index.php?c=sync">here</a>.
                </div>
            </div>
        </div>

        <div class="row">
            <div class="column">
                <h1 class="">Upcoming Games</h1>
            </div>
        </div>
        <% fixtures.forEach(({kickOff, date, onSite, vs, gCalLink, bookLink})=>{ %>

            <div class="card mt-2">
                <div class="card-body">
                    <h5 class="card-title">
                        <%= date %>
                       <a href="<%= gCalLink %>" title="Add to Google Maps" target="_blank" class="card-link"><img
                                   style="height: 1em; float: right" src="gcalendar.svg"></a>
                    </h5>
                    <h6 class="card-subtitle mb-2 text-muted">vs <%= vs %></h6>
                    <span class="card-link">On Site <%= onSite %></span>
                    <span class="card-link">KO <%= kickOff %></span>
                    <span class="card-link"><a href="<%= bookLink %>" target="_blank">Book On</a></span>

                </div>
            </div>
        <% }) %>
    </div>

</div>

</body>
</html>
